        <aggregate alias="Product" class="CommerceMultiLangProduct" local="product_id" foreign="id" cardinality="one" owner="foreign" />
    </object>

    <object class="CommerceMultiLangProductImage" table="commercemultilang_product_images" extends="xPDOSimpleObject">
        <field key="product_id" dbtype="int" precision="10" attributes="unsigned" phptype="integer" null="false" index="index"/>
